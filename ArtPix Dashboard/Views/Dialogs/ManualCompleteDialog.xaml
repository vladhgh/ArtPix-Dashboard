<ui:ContentDialog
    x:Class="ArtPix_Dashboard.Views.Dialogs.ManualCompleteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    PrimaryButtonText="Manual Complete"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    Style="{StaticResource SmallContentDialogStyle}">

	<ui:SimpleStackPanel Orientation="Vertical" HorizontalAlignment="Center">
		<TextBlock
			Text="Are you sure you want to manually complete this crystal?"
			FontWeight="Black"
			HorizontalAlignment="Center"
			TextAlignment="Center"
			Style="{DynamicResource TitleTextBlockStyle}"
			Margin="0 0 0 9"/>
		<ui:SimpleStackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="2">
			<TextBlock
				Text="The product status will be changed to "
				HorizontalAlignment="Center"
				TextTrimming="CharacterEllipsis"
				Width="auto"
				TextWrapping="Wrap"
				Margin="0,2,0,4"/>
			<Button Background="DarkGreen" Style="{DynamicResource InactiveButtonStyle}"  Height="auto" Opacity="0.9">
				<TextBlock
					Text="Engrave Done"
					Margin="5 0 5 0"
					FontSize="8"
					Style="{DynamicResource BaseTextBlockStyle}"/>
			</Button>
		</ui:SimpleStackPanel>
    </ui:SimpleStackPanel>

</ui:ContentDialog>
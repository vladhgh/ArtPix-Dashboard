<ui:ContentDialog
    x:Class="ArtPix_Dashboard.Views.Dialogs.ReEngraveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    PrimaryButtonText="Re-Engrave"
    CloseButtonText="Cancel"
    DefaultButton="Primary">

    <ui:SimpleStackPanel Orientation="Vertical">
        <TextBlock
            Text="Are you sure you want to re-engrave this crystal?"
            FontWeight="Black"
            Style="{DynamicResource TitleTextBlockStyle}"
            Margin="0 0 0 10"/>
        <TextBlock
            Text="Assign Machine:"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource BaseTextBlockStyle}"
            Margin="0 10 0 5"/>
        <ComboBox
            x:Name="Combo2"  
            ui:ControlHelper.PlaceholderText="Assign Machine"
            ItemsSource="{Binding Machines}"
            Width="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </ui:SimpleStackPanel>

</ui:ContentDialog>